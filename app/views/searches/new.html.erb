<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card p-4">
    <h2 class="card-title text-center">Search companies or people</h2>
    <%= form_with model: @search, local: true do |form| %>
      <div class="form-group">
        <%= form.label :query %>
        <%= form.text_field :query, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :scope %>
        <%= form.select :scope, Search.scopes.keys.map { |scope| [scope.humanize, scope] }, {}, class: "form-control" %>
      </div>
      <div class="form-group text-center mt-3">
        <%= form.submit "Search", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>